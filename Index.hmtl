  background-size: cover;
  background-position: center;
}
.hero::after {
  content: "";
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.65);
}
.hero * { position: relative; z-index: 1; }

/* Live Badge */
.live-badge {
  display: inline-block;
  margin-top: 1rem;
  padding: 0.4rem 1rem;
  border-radius: 20px;
  font-weight: bold;
  animation: badgePulse 1.5s ease-in-out infinite alternate;
  cursor: pointer;
  transition: transform 0.3s, box-shadow 0.3s;
}
.live-badge:hover { transform: scale(1.1); }
@keyframes badgePulse {
  0% { box-shadow: 0 0 5px gray; }
  50% { box-shadow: 0 0 15px red; }
  100% { box-shadow: 0 0 5px gray; }
}

