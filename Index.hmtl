@keyframes neonPulse {
  0% { text-shadow: 0 0 5px #ff0000,0 0 10px #ff0000,0 0 20px #ff0000; }
  50% { text-shadow: 0 0 10px #ff0000,0 0 20px #ff0000,0 0 30px #ff0000; }
