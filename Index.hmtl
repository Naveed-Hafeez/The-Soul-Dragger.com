#videos-container { display:grid; grid-template-columns:repeat(auto-fit,minmax(250px,1fr)); gap:1rem; justify-items:center; }
#videos-container img { width:100%; border-radius:12px; }
#videos-container p { color:#fff; font-weight:bold; text-align:center; margin-top:0.5rem; }

/* Support */
#support { padding:4rem 2rem; text-align:center; }
#support .donate-btn { display:inline-block; padding:1rem 2rem; border-radius:50px; background:gold; color:#000; font-weight:bold; text-decoration:none; transition:0.3s; }
