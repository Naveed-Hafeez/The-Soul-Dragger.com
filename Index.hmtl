});

/* Twitch Live Status */
const username="thesouldragger";
const badge=document.getElementById("liveStatus");
async function updateLiveStatus(){
  try{
    const res=await fetch(`https://decapi.me/twitch/uptime/${username}`);
    const text=await res.text();
    if(text.includes("offline")){ badge.textContent="âšª OFFLINE"; badge.style.background="gray"; }
    else{ badge.textContent="ðŸ”´ LIVE"; badge.style.background="red"; }
  }catch(e){ badge.textContent="âšª OFFLINE"; badge.style.background="gray"; }
}
badge.addEventListener('click',()=>window.open(`https://www.twitch.tv/${username}`,'_blank'));
updateLiveStatus(); setInterval(updateLiveStatus,30000);

/* Latest YouTube Videos */
const CHANNELS=["UC9rqxokqbTahWAfJjOCT6fg","UCJPdJa6ICAv7Ursd2bzd3YA"];
const videosContainer=document.getElementById("videos-container");
async function fetchVideos(){
  videosContainer.innerHTML="";
  for(let c of CHANNELS){
    const RSS_URL=`https://www.youtube.com/feeds/videos.xml?channel_id=${c}`;
    const API_URL=`https://api.rss2json.com/v1/api.json?rss_url=${encodeURIComponent(RSS_URL)}`;
    try{
      const res=await fetch(API_URL);
      const data=await res.json();
      data.items.slice(0,3).forEach(item=>{
        const div=document.createElement("div");
        div.innerHTML=`<a href="${item.link}" target="_blank"><img src="${item.thumbnail}" alt="${item.title}"></a><p>${item.title}</p>`;
        videosContainer.appendChild(div);
      });
    }catch(e){ console.error(e); }
  }
}
fetchVideos();
</script>
